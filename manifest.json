{
  "manifest_version": 3,
  "name": "Touch20",
  "short_name": "Touch20",
  "description": "Introduces Touch controls to Roll20",
  "version": "1.3.1",
  "icons": {
    "32": "img/touch20-32x32.png",
    "48": "img/touch20-48x48.png",
    "64": "img/touch20-64x64.png",
    "128": "img/touch20-128x128.png"
  },
  "host_permissions": [
    "*://*.roll20.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.roll20.net/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["main.js"],
      "matches": ["*://*.roll20.net/*"]
    },
    {
      "resources": ["main.js.map"],
      "matches": ["*://*.roll20.net/*"]
    },
    {
      "resources": ["style.css"],
      "matches": ["*://*.roll20.net/*"]
    },
    {
      "resources": ["style.css.map"],
      "matches": ["*://*.roll20.net/*"]
    }
  ]
}
